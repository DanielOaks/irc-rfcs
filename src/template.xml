  <front>
    <title abbrev="IRCv3">Internet Relay Chat Protocol version 3</title>

    <author fullname="Daniel Oakley" initials="D." surname="Oakley">
      <organization>mammon.io</organization>
      <address>
        <email>daniel@danieloaks.net</email>
